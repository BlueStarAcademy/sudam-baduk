{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "types": ["vite/client"],
    "allowJs": false,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": [
    "*.ts",
    "*.tsx",
    "components",
    "constants",
    "contexts",
    "hooks",
    "services",
    "types",
    "utils",
    "scripts"
  ],
  "exclude": [
    "server"
  ]
}